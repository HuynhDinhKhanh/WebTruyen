@model IEnumerable< WebTruyen.Models.TheLoai >
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Thể Loại Truyện</h2>
<table border="1px">
    <tr>
        <th>Mã thể loại</th>
        <th>Tên thể loại </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.maloai</td>
            <td>@item.tenloai</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.maloai }) |
                @Html.ActionLink("Chi Tiết", "Detail", new { id = item.maloai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maloai })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Thêm", "Create", "Theloai")


