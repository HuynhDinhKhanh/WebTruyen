@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi Tiết Thể Loại Truyện</h2>

<fieldset>
    <div class="display-label">Mã loại: @Model.maloai</div>
    <div class="display-label">Tên loại: @Model.tenloai</div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Xóa", "Delete", new { id = Model.maloai }) |
        @Html.ActionLink("Sửa", "Edit", new { id = Model.maloai }) |
        @Html.ActionLink("Trở Về Trước", "Index")
    </p>
}
